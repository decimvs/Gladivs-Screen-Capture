    <path refid="library.libjitsi.classpath"/>
  </path>
  
  <path id="gladivsscfx.runtime.production.module.classpath">
    <pathelement location="${gladivsscfx.output.dir}"/>
    <path refid="library.org.hashids:hashids:1.0.3.classpath"/>
    <path refid="library.com.1stleg:jnativehook:2.0.3.classpath"/>
    <path refid="library.com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
    <path refid="library.libjitsi.classpath"/>
  </path>
  
  <path id="gladivsscfx.module.classpath">
    <path refid="${module.jdk.classpath.gladivsscfx}"/>
    <pathelement location="${gladivsscfx.output.dir}"/>
    <path refid="library.org.hashids:hashids:1.0.3.classpath"/>
    <path refid="library.com.1stleg:jnativehook:2.0.3.classpath"/>
    <path refid="library.com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
    <path refid="library.libjitsi.classpath"/>
  </path>
  
  <path id="gladivsscfx.runtime.module.classpath">
    <pathelement location="${gladivsscfx.testoutput.dir}"/>
    <pathelement location="${gladivsscfx.output.dir}"/>
    <path refid="library.org.hashids:hashids:1.0.3.classpath"/>
    <path refid="library.com.1stleg:jnativehook:2.0.3.classpath"/>
    <path refid="library.com.fasterxml.jackson.core:jackson-databind:2.9.4.classpath"/>
