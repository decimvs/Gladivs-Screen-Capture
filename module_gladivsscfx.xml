    <patternset refid="excluded.from.module.gladivsscfx"/>
  </patternset>
  
  <path id="gladivsscfx.module.sourcepath">
    <dirset dir="${module.gladivsscfx.basedir}">
      <include name="src"/>
      <include name="src/resources"/>
    </dirset>
