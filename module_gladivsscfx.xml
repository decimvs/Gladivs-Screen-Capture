      <src refid="gladivsscfx.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.gladivsscfx"/>
    </javac2>
    
    <copy todir="${gladivsscfx.output.dir}">
      <fileset dir="${module.gladivsscfx.basedir}/src">
