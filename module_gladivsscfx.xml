  <property name="compiler.args.gladivsscfx" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="gladivsscfx.output.dir" value="${module.gladivsscfx.basedir}/out/production/GladivsSCFx"/>
  <property name="gladivsscfx.testoutput.dir" value="${module.gladivsscfx.basedir}/out/test/GladivsSCFx"/>
  
  <path id="gladivsscfx.module.bootclasspath">
