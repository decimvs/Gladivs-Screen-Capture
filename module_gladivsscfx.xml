  <target name="compile.module.gladivsscfx" depends="compile.module.gladivsscfx.production,compile.module.gladivsscfx.tests" description="Compile module GladivsSCFx"/>
  
  <target name="compile.module.gladivsscfx.production" depends="register.custom.compilers" description="Compile module GladivsSCFx; production classes">
    <mkdir dir="${gladivsscfx.output.dir}"/>
